<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray"
    tools:context="com.omjoonkim.doyouremember.app.home.HomeFragment">

    <RadioGroup
        android:id="@+id/subtab_home"
        android:layout_width="match_parent"
        android:layout_height="@dimen/subtab_height"
        android:layout_marginTop="@dimen/subtab_top_margin"
        android:layout_marginLeft="@dimen/subtab_side_margin"
        android:layout_marginRight="@dimen/subtab_side_margin"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/btn_subtab_send"
            android:checked="true"
            android:text="보내자"
            style="@style/SubTab" />

        <RadioButton
            android:id="@+id/btn_subtab_receive"
            android:text="받자"
            style="@style/SubTab" />

    </RadioGroup>

    <FrameLayout
        android:id="@+id/fragment_master"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/subtab_home"
        android:layout_marginTop="5dp" />

</RelativeLayout>
