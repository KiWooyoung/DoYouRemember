<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:swipe="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe_my_account"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="@dimen/list_side_margin"
    android:layout_marginRight="@dimen/list_side_margin"
    swipe:clickToClose="true"
    swipe:leftEdgeSwipeOffset="0dp"
    swipe:rightEdgeSwipeOffset="0dp">

    <LinearLayout
        android:id="@+id/bottom_wrapper"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/item_small_size"
            swipe:cardElevation="0dp"
            swipe:cardCornerRadius="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_view_copy_my_account"
                    style="@style/Swipe_item"
                    android:layout_width="@dimen/item_small_size"
                    android:padding="8dp"
                    android:background="@color/swipe_orange_level3"
                    android:src="@drawable/accountcopy_icon"/>

                <ImageView
                    android:id="@+id/image_view_revise_my_account"
                    style="@style/Swipe_item"
                    android:layout_width="@dimen/item_small_size"
                    android:padding="8dp"
                    android:background="@color/swipe_orange_level2"
                    android:src="@drawable/revise_icon"/>

                <ImageView
                    android:id="@+id/image_view_delete_my_account"
                    style="@style/Swipe_item"
                    android:layout_width="@dimen/item_small_size"
                    android:padding="8dp"
                    android:background="@color/swipe_orange_level1"
                    android:src="@drawable/delete_icon"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

    <android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="5dp">

        <ImageView
            android:id="@+id/image_view_bookmark_star"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="22dp"
            android:src="@drawable/bookmark_blank_star" />

        <TextView
            android:id="@+id/text_view_my_account_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="74dp"
            android:layout_marginTop="24dp"
            android:text="test 110232741823"
            android:textColor="#737373"
            android:textSize="18sp" />

    </android.support.v7.widget.CardView>

</com.daimajia.swipe.SwipeLayout>