<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_register_my_account"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efefef"
    tools:context="com.omjoonkim.doyouremember.app.myaccount.registermyaccount.RegisterMyAccountActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorPrimary"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        >

        <TextView
            android:id="@+id/text_view_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:text="내 계좌 작성"
            android:textSize="16sp"
            />

    </android.support.v7.widget.Toolbar>
    
    <android.support.v7.widget.CardView
        android:layout_width="330dp"
        android:layout_height="101dp"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        app:cardCornerRadius="5dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp"
            android:text="계좌"
            android:textColor="#454545"
            android:textSize="14sp"
            />
        
        <TextView
            android:id="@+id/text_view_my_bank_name"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginTop="41dp"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:hint="은행"
            android:textSize="16sp"
            android:textColor="#4a4a4a"
            android:textColorHint="#aeaeaf"
            android:background="@drawable/back"
            />
        
        <ImageView
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:layout_marginTop="71dp"
            android:layout_marginLeft="70dp"
            android:src="@drawable/bank_triangle"
            />

        <EditText
            android:id="@+id/edit_text_my_account_number"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="41dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="20dp"
            android:textCursorDrawable="@color/cursor"
            android:background="@drawable/back"
            android:gravity="center"
            android:hint="계좌번호를 입력해주세요."
            android:textSize="16sp"
            android:textColor="#4a4a4a"
            android:textColorHint="#aeaeaf"/>


   </android.support.v7.widget.CardView>
</RelativeLayout>
