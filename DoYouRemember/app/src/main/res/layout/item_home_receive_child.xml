<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:layout_marginRight="25dp"
    android:layout_marginLeft="25dp"
    android:layout_marginTop="5dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <CheckBox
            android:id="@+id/checkbox_isReceiveDone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:theme="@style/ReceiveDoneCheck" />
        
        <TextView
            android:id="@+id/textView_receiveDoneLine"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@drawable/rounded_corner_done_line_off"
            android:layout_centerVertical="true"
            android:layout_marginLeft="52dp"
            android:layout_marginRight="42dp"/>

        <TextView
            android:id="@+id/textView_debtor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_centerVertical="true"
            android:textColor="@color/text_DarkGray"
            android:layout_toRightOf="@+id/checkbox_isReceiveDone"
            android:text="Mash-Up 신년파티"/>

        <TextView
            android:id="@+id/textView_receive_price_individual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_weight="1"
            android:layout_centerVertical="true"
            android:textColor="@color/text_DarkGray"
            android:layout_toLeftOf="@+id/imageView_receive_KaKaoLink"
            android:text="8000원"/>

        <ImageView
            android:id="@+id/imageView_receive_KaKaoLink"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="12dp"
            android:elevation="0dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/kakao_talk"
            android:background="@drawable/btn_kakao_link"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>