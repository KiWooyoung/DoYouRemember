<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:layout_marginRight="25dp"
    android:layout_marginLeft="25dp"
    android:layout_marginTop="5dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        
        <CheckBox
            android:id="@+id/checkbox_isReceiveDone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:id="@+id/textview_debtor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:textColor="@color/text_DarkGray"
            android:text="Mash-Up신년파티"/>

        <TextView
            android:id="@+id/textview_receive_price_individual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_weight="1"
            android:textColor="@color/text_DarkGray"
            android:text="8000원"/>

        <ImageView
            android:id="@+id/imageview_receive_kakaolink"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="12dp"
            android:elevation="0dp"
            android:src="@drawable/kakao_talk"
            android:background="@drawable/btn_kakao_link"/>

    </LinearLayout>
</android.support.v7.widget.CardView>